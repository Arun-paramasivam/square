#include<stdio.h>
int main()
{
	int i,j,n,x=1,a[10][10]={0};
	scanf("%d",&n);
	i=0;j=n/2;
	a[i][j]=x++;
	while(x<=n*n)
	{
		if(i==0)
		{
			i=n-1;
		}
		else
		{
			i--;
		}
		if(j==n-1)
		{
			j=0;
		}
		else
		{
			j++;
		}
		if(a[i][j]==0)
		{
			a[i][j]=x;
		}
		else
		{
			if(i==n-1)
			{
				i=1;
			}
			else
			{
				i=i+2;
			}
			if(j==0)
			{
				j=n-1;
			}
			else
			{
				j=j-1;
			}
			a[i][j]=x;
		}
		x++;
	}
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			printf("%d\t",a[i][j]);
		}
		printf("\n");
	}
	return 0;
}
